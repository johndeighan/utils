# civet.lib.test.civet

import {SourceFile} from 'npm:typescript'

import {defined, isHash} from 'datatypes'
import {o} from 'llutils'
import {getCmdArgs} from 'utils'
import {DBG} from 'logger'
import {setDirTree, slurp, withExt} from 'fsys'
import {ts2ast, pprintAST} from 'typescript'
import {
	civet2tsFile, civet2ts, civet2ast,
	} from 'civet'
import {
	equal, like, succeeds, fails, truthy, falsy, isType,
	} from 'unit-test'

getCmdArgs()

# ---------------------------------------------------------------------------

setup := (): void =>

	DBG "setDirTree()"

	setDirTree 'test/civet', """
		test.civet
			x := 42

		"""

setup()

# ---------------------------------------------------------------------------

testPath := './test/civet/test.civet'
civetCode := slurp testPath

tsCode := civet2ts civetCode
ast1 := ts2ast tsCode
ast2 := civet2ast civetCode
equal ast1, ast2

DBG "civet2ts(code)"

equal civet2ts('x := 42'), """
	"use strict";
	const x = 42
	"""

DBG "civet2tsFile(path)"

(() =>
	civet2tsFile testPath, withExt(testPath, '.ts'), o'!inlineMap'
	code := slurp withExt(testPath, '.ts')
	equal code, """
		"use strict";
		const x = 42
		"""
	)()

DBG "civet2ast(code)"

# isType 'SourceFile', ast1
# isType 'SourceFile', ast2

DBG "pprintAST(hAST)"

equal pprintAST(ts2ast('x := 42')), """
	SourceFile - 'x := 42'
		LabeledStatement - 'x := 42'
			Identifier - 'x'
			ExpressionStatement - '= 42'
				BinaryExpression - '= 42'
					Identifier - ''
					FirstAssignment - '='
					FirstLiteralToken - '42'
		EndOfFileToken - ''
	""".replaceAll('\t', '   ')

succeeds () => civet2ast('x := 42')
