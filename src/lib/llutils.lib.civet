/**
 * don't escape newline or carriage return
 * Optionally, add a character to indicate a particular
 * position in the string
 */

export escapeBlock := (
	block: string,
	hOptions: hash = {}
	): string =>

	return escapeStr(block, withKeyVal(hOptions, ['block', true]))

