/**
 * stringify any value, so that if we take the resultStr, we can
 *    let x = <resultStr>
 * to retrieve the original value (if no trunc option is passed in)
 */

export stringify := (
	x: any,
	hOptions: hash={}
	level: number=0
	): string =>

	{oneLine, compress, trunc} := getOptions hOptions, {
		oneLine: false
		compress: true
		trunc: undef
		}

	typeStr := typeof x
	result := switch typeStr
		when 'undefined'
			'undefined'
		when 'object'
			if (x == null)
				'null'
			else if Array.isArray(x)
				lParts := stringify(item, hOptions, level+1) for item of x
				if oneLine
					'[' + lParts.join(', ') + ']'
				else
					'[\n' + lParts.join(',\n') + '\n]'
			else
				lParts := for key,val in x
					"#{key}: #{stringify(val, hOptions, level+1)}"
				if oneLine
					'{' + lParts.join(', ') + '}'
				else
					'{\n' + lParts.join(',\n') + '\n}'
		when 'boolean'
			x ? 'true' : 'false'
		when 'number'
			x.toString()
		when 'bigint'
			x.toString() + 'n'
		when 'string'
			"\"#{escapeStr(x, o'style=C')}\""
		when 'symbol'
			if defined(x.description)
				"Symbol(\"#{x.description}\")"
			else
				"Symbol()"
		when 'function'
			functionDef(x)

	if defined(trunc)
		return truncStr(result, trunc)
	else
		return result

