	let stack2 = undef

	main := () ->
		func1()
		func2()

	func1 := () ->
		stack1 = getV8Stack()

	func2 := () ->
		stack2 = getV8Stack()
		return

	main()
	like stack1, [
		{
			type: 'function'
			name: 'func1'
			source: 'test/v8-stack.test.civet'
			line: 25
			}
		{
			type: 'function'
			name: 'main'
