			line: 31
			}
		{
			type: 'script'
			source: 'test/v8-stack.test.civet'
			line: 82
			}
		]
	like stack2, [
		{
			type: 'function'
			name: 'func2'
			source: 'test/v8-stack.test.civet'
			line: 28
			}
		{
