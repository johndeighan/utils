(() =>
	lChanges: fsChangeType[] := []
	fileChangeFunc: fsCallbackFunc := (change) =>
		lChanges.push change
		return

	handler := new FileEventHandler(fileChangeFunc)
	handler.handle {
		kind: 'modify',
