		}

	await sleep 2

	handler.handle {
		kind: 'modify',
		path: '/usr/lib/temp.txt'
		}
	handler.handle {
		kind: 'modify',
		path: '/usr/lib/temp.txt'
		}

	await sleep 2

	expected := [
		{kind: 'modify', path: '/usr/lib/temp2.txt'}
		{kind: 'modify', path: '/usr/lib/temp.txt'}
		{kind: 'modify', path: '/usr/lib/temp.txt'}
		]

	equal lChanges, expected
	)()

